{
    "name": "Scroll Blocker",
    "version": "1.0",
    "description": "Prevents the mousewheel to work in webpages.",
    "content_scripts": [
        {
            "js": [ "contentscript.js" ],
            "matches": [ "http://*/*", "https://*/*" ],
            "run_at": "document_idle"
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Block mousewheel in this page"
    },
    "background_page": "background.html",
    "permissions": [ "tabs" ]
}